{
  "compilerOptions": {
    "target": "ES6",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,            
    "strict": true,  
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "strictPropertyInitialization": false                        
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
